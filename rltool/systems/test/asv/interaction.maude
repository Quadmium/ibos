eq start4 = {
    createTLSWrapper("A", {
      < "A" : Client | cstate: sending, target: "B", read: "" >
    })
    
    createTLSWrapper("B", {
      < "B" : Server | sstate: waiting, reply: "ServerReply", read: "" >
    })
  }
  .

