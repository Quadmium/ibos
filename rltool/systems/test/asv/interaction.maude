      })
    } >
    
    
    < blankWrapper(tlsWrapper("B")) : BlankWrapper | world: {
      createTLSWrapper("B", {
        < "B" : Server | sstate: waiting, reply: "ServerReply", read: "" >
      })
    } >
    
  }
  .

--- Nested TLS wrappers
